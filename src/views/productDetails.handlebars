<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Detalles del Producto</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
</head>
<body>
    <div class="container mt-4">
        <h1>{{product.name}}</h1>
        <p>Precio: ${{product.price}}</p>
        <p>Categoría: {{product.category}}</p>
        <p>Descripción: {{product.description}}</p>
        <button class="btn btn-success add-to-cart" data-id="{{product._id}}">Agregar al Carrito</button>
        <a href="/products" class="btn btn-link">Volver a la Lista</a>
    </div>

    <script>
        document.querySelector('.add-to-cart').addEventListener('click', () => {
            const productId = document.querySelector('.add-to-cart').getAttribute('data-id');
            fetch(`/api/carts/add-product`, {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify({ productId, quantity: 1 })
            })
            .then(response => response.json())
            .then(data => {
                alert(data.message);
            })
            .catch(error => console.error('Error:', error));
        });
    </script>
</body>
</html>