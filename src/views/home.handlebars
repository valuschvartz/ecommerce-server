<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home</title>
</head>
<body>
    <h1>Lista de Productos</h1>
    <ul>
        {{#each products}}
        <li>
            <h2>{{this.title}}</h2>
            <p>{{this.description}}</p>
            <p>Precio: ${{this.price}}</p>
            <p>Código: {{this.code}}</p>
            <p>Stock: {{this.stock}}</p>
            <p>Categoría: {{this.category}}</p>
            {{#if this.thumbnails}}
                <p>Imágenes:</p>
                <ul>
                    {{#each this.thumbnails}}
                    <li><img src="{{this}}" alt="{{../title}}"></li>
                    {{/each}}
                </ul>
            {{/if}}
        </li>
        {{/each}}
    </ul>
    <script src="/socket.io/socket.io.js"></script>
    <script>
        const socket = io();

        socket.on('productListUpdated', (products) => {
            // Aquí podrías actualizar la lista de productos en tiempo real
            console.log('Lista de productos actualizada:', products);
        });
    </script>
</body>
</html>
